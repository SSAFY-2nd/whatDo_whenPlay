<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="?attr/actionBarSize"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/pizza_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="먹거리 및 놀거리 점포이름"
                android:textColor="@color/main_color"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:layout_margin="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/starview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/star"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="3.8 / 5.0"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/commitreview"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="방문자리뷰 00"
                android:gravity="center_vertical"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/blogreview"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="블로그리뷰 00"
                android:gravity="center_vertical"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <ScrollView
                android:id="@+id/detail_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/title_home"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="HOME"
                            android:gravity="center_vertical"
                            android:textSize="20dp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:id="@+id/img_phone"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/phone_icon"/>

                        <TextView
                            android:id="@+id/text_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="000 - 0000 - 0000"
                            android:gravity="center_vertical"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:id="@+id/img_map"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/maker_icon"/>

                        <TextView
                            android:id="@+id/text_map"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="서울특별시 강남구 테헤란로 어쩌구"
                            android:gravity="center_vertical"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:id="@+id/img_time"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/clock_icon"/>

                        <TextView
                            android:id="@+id/text_time"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="10:00 ~ 21:00"
                            android:gravity="center_vertical"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:id="@+id/img_price"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/won_icon"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_price_2p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:text="2인----------------44,000원"
                                    android:gravity="center_vertical"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="5dp"/>

                                <TextView
                                    android:id="@+id/text_price_3p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:text="3인----------------60,000원"
                                    android:gravity="center_vertical"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="5dp"/>
                                <TextView
                                    android:id="@+id/text_price_4p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:text="4인----------------76,000원"
                                    android:gravity="center_vertical"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="5dp"/>
                                <TextView
                                    android:id="@+id/text_price_5p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:text="5인----------------90,000원"
                                    android:gravity="center_vertical"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/title_review"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="REVIEW"
                            android:gravity="center_vertical"
                            android:textSize="20dp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp">

                            <ImageView
                                android:id="@+id/img_review1"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/user_icon"/>

                            <TextView
                                android:id="@+id/text_review1"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:text="맛이있네요"
                                android:gravity="center_vertical"
                                android:textSize="15dp"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp">

                            <ImageView
                                android:id="@+id/img_review2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/user_icon"/>

                            <TextView
                                android:id="@+id/text_review2"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:text="또 오고싶어요~~"
                                android:gravity="center_vertical"
                                android:textSize="15dp"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp">

                            <ImageView
                                android:id="@+id/img_review3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/user_icon"/>

                            <TextView
                                android:id="@+id/text_review3"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:text="놀면 뭐하니로 왔는데 성공했네요!!"
                                android:gravity="center_vertical"
                                android:textSize="15dp"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/title_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="PHOTO"
                            android:gravity="center_vertical"
                            android:textSize="20dp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:id="@+id/img_ex1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/pizza_icon"
                            android:layout_margin="5dp"/>

                        <ImageView
                            android:id="@+id/img_ex2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/pizza_icon"
                            android:layout_margin="5dp"/>

                        <ImageView
                            android:id="@+id/img_ex3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/pizza_icon"
                            android:layout_margin="5dp"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>